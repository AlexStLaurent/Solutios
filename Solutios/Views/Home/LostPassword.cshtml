
@{
    ViewData["Title"] = "LostPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LostPassword</h2>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image" style="object-fit:contain"><img src="~/images/login-image.jpg" /></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Oublier votre mot de passe?</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Entrer votre addresse courriel">
                                        </div>
                                        <div class="form-group">
                                            <button class="btn btn-primary btn-user btn-block" type="submit">Envoyer votre nouveau mot de passe</button>
                                        </div>
                                    </form>
                                        </div>
                                        

                                    
                                   
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

        </div>
    </body>