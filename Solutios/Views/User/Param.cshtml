
@{
    ViewData["Title"] = "Param";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Paramètres de compte</h2>
<div class="container">
    <a data-toggle="modal" data-target="#ChangePassword">Changer votre mot de passe</a>
</div>


<div class="modal" id="ChangePassword">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmer la fin du projet?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Confirmer la fin projet pour l'archiver et désactiver toute possiblités de modifier le projet.</div>
            <form method="post">
                <input hidden name="id" value="@ViewData["id"]" />
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary" asp-controller="Admin" asp-action="ArchiverProjet">Confirmer l'Archivage</button>

                </div>
            </form>
        </div>
    </div>
</div>

